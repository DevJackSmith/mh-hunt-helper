{
    "manifest_version": 2,

    "name": "MH Hunt Helper",
    "description": "This extension tracks mousehunt hunts",
    "version": "1.0",
    "icons": { "128": "icon.png" },

    "content_scripts": [{
        "matches": ["https://www.mousehuntgame.com/*"],
        "js": ["inject.js"]
    }],
    "web_accessible_resources": ["main.js"],

    "permissions": [
        "webRequest",
        "https://mhhh.000webhostapp.com/"
    ]
}