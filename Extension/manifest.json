{
    "manifest_version": 2,

    "name": "MH Hunt Helper",
    "description": "This extension tracks mousehunt hunts.",
    "version": "1.4",
    "icons": { "128": "icon.png" },

    "content_scripts": [{
        "matches": ["https://www.mousehuntgame.com/*", "https://apps.facebook.com/mousehunt/*"],
        "js": ["inject.js"]
    }],
    "web_accessible_resources": ["main.js"],

    "permissions": [
        "https://mhhh.000webhostapp.com/",
        "https://www.mousehuntgame.com/managers/ajax/turns/activeturn.php"
    ]
}